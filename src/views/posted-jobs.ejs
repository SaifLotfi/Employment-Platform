<%- include('layout/header') %>
</head>
<%- include('layout/nav-start') %>
<%- include('layout/employer-nav-list') %>
<%- include('layout/nav-end') %>
<div class="container" style="margin-top: 10rem">
  <h2 class="text-center mb-4">My Posted Jobs</h2>
  <%if (jobs.length) {%>
   <div class="row row-cols-1 row-cols-md-2 g-4">
    <% jobs.forEach((job) => { %>
      <div class="col text-center mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= job.title %></h5>
            <p class="card-text"><strong>Experience Level:</strong> <%= job.expLevel %></p>
            <p class="card-text"><strong>Salary:</strong> $<%= job.salary %></p>
            <a href="/job/<%= job.jobId %>" class="btn btn-outline-primary">View Job</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Pagination Controls -->
  <div class="d-flex justify-content-center mt-4">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <!-- Previous Page Button -->
        <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= parseInt(currentPage) - 1 %>">Previous</a>
        </li>

        <!-- Page Number Buttons -->
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage == i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <!-- Next Page Button -->
        <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= parseInt(currentPage) + 1 %>">Next</a>
        </li>
      </ul>
    </nav>
  </div>

  <%} else{%>
    <p class="text-center">No jobs found</p>
  <%}%>

</div>
<%- include('layout/footer') %>
